<div class="container min-vh-100 mt-3">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-8 col-lg-6">
      <h2 class="text-center mb-3">Service <%= @service.id %></h2>
      <div class="container bg-white rounded rounded-3 my-3 p-3">
        <p><strong>Service</strong>: <%= @service.name %></p>
        <% if @service.public %>
          <p><strong>Price</strong>: <%= humanized_money_with_symbol(@service.price) %></p>
          <%#= form_tag bookings_path do %>
            <%#= hidden_field_tag 'service_id', @service.id %>
            <%#= submit_tag "Book", class: "btn btn-primary w-100" %>
          <%# end %>
        <% end %>
      </div>
      <div class="d-flex justify-content-between">
        <% if policy(@service).edit? %>
          <%= link_to edit_service_path(@service), class: "btn btn-outline-secondary btn-sm w-25" do %>
            Edit
          <% end %>
        <% end %>
        <% if policy(@service).destroy? %>
          <%= link_to service_path(@service), class: "btn btn-outline-secondary btn-sm w-25", method: :delete, data: { confirm: "Are you sure?" } do %>
            Delete
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
