<!-- <div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top"> -->
  <%= link_to root_path, class: "navbar-brand" do %>
    <%#= image_tag "https://lirp-cdn.multiscreensite.com/c416ec49/dms3rep/multi/opt/tooth-allport-166w.png" %>
    <%= image_tag "design-dental-clinic-logo.png" %>
    <%#= image_tag "clinic_name.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto text-right font-weight-bold">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= image_tag "plus-icon-dark-blue.png", class: "avatar dropdown-toggle", id: "navbarDropdown", role: "button", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right py-0" aria-labelledby="navbarDropdown">
            <% if policy(Treatment).new? %>
              <%= link_to "New Treatment", new_treatment_path, class: "dropdown-item" %>
            <% end %>
            <% if policy(Booking).new? %>
              <%= link_to "New Booking", new_booking_path, class: "dropdown-item" %>
            <% end %>
            <% if policy(MedicalForm).new? && current_user.profile_type == "Patient" %>
              <%= link_to "New Medical Form", new_medical_form_path(patient_id: current_user.profile.id), class: "dropdown-item" %>
            <% end %>
            <% if policy(User).new? %>
              <%= link_to "New Patient", new_user_path, class: "dropdown-item" %>
            <% end %>
            <% if policy(Service).new? %>
              <%= link_to "New Service", new_service_path, class: "dropdown-item" %>
            <% end %>
          </div>
        </li>
        <li class="nav-item">
          <%= link_to "Bookings", bookings_path, class: "nav-link" %>
        </li>
        <% if current_user.profile_type == "Patient" && current_user.profile.medical_forms.last %>
          <li class="nav-item">
            <%= link_to "Medical Form", medical_form_path(current_user.profile.medical_forms.last), class: "nav-link" %>
          </li>
        <% end %>
        <% if policy(Request).index? %>
          <li class="nav-item">
            <%= link_to "Requests", requests_path, class: "nav-link" %>
          </li>
        <% end %>
        <% if policy(Service).index? %>
          <li class="nav-item">
            <%= link_to "Services", services_path, class: "nav-link" %>
          </li>
        <% end %>
        <% if policy(User).patients? %>
          <li class="nav-item">
            <%= link_to "Patients", patients_path, class: "nav-link" %>
          </li>
        <% end %>
        <% if policy(User).index? %>
          <li class="nav-item">
            <%= link_to "Users", users_path, class: "nav-link" %>
          </li>
        <% end %>
        <li class="nav-item dropdown">
          <%= image_tag "https://mhchealthcare.org/wp-content/uploads/2019/05/doctor-avatar-1-wpcf_200x200.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", role: "button", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right py-0" aria-labelledby="navbarDropdown">
            <h6 class="dropdown-item disabled pt-3">Hi <%= current_user.first_name %>!</h6>
            <hr class="dropdown-divider mb-0">
            <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
          <%= link_to "Book Now", new_request_path, class: "btn btn-primary" %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link btn btn-link mx-3" %>
        </li>
      <% end %>
    </ul>
  </div>
<!-- </div> -->
