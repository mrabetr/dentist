<div class="container min-vh-100 mt-3">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-8 col-lg-6 mb-4">
      <h2 class="text-center mb-3">Patients</h2>
      <%= form_tag patients_path, method: :get do %>
        <div class="d-flex justify-content-between">
            <%= text_field_tag :query,
              params[:query],
              class: "form-control rounded-pill pl-4",
              placeholder: "🕵️‍♀️ find your patient"
            %>
            <%#= submit_tag "Search", class: "btn btn-primary ml-1 w-50" %>
            <%= submit_tag "Search", :style => "display: none;" %>
        </div>
      <% end %>
      <br>
      <div class="list-group">
        <% @patients.each do |patient| %>
          <%= link_to patient_path(patient), class: "list-group-item list-group-item-action" do  %>
            <%= patient.name %> (<%= patient.user.email %>)
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
