<div class="container min-vh-100 mt-3">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-8 col-lg-6" data-controller="procedure">
      <h2 class="text-center mb-3">Update treatment</h2>
      <%= simple_form_for(@treatment) do |f| %>
        <%= f.association :patient, label_method: :name_email, value_method: :id, input_html: { class: 'select2' } %>

        <div data-procedure-target="new">
          <%= f.simple_fields_for :procedures do |b| %>
            <div class="form-row">
              <div class="col-8 form-group">
                <%= b.input :procedure %>
              </div>
              <div class="col-4 form-group">
                <%= b.input :price %>
              </div>
            </div>
            <%= b.check_box :_destroy %>
            <%= b.label :delete %>
          <% end %>
        </div>

        <div class="d-flex justify-content-between">
          <button type="button" class="btn btn-outline-secondary mb-3"
            data-action="click->procedure#addEdit">Add Procedure</button>
          <%= link_to "Cancel Edit", patient_path(@treatment.patient), class: "btn btn-outline-secondary mb-3" %>
        </div>

        <%= f.submit "Update", class: "btn btn-primary w-100 mb-3" %>
      <% end %>
    </div>
  </div>
</div>
