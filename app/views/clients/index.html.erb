<div class="container min-vh-100 mt-3">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-8 col-lg-6 mb-4">
      <h2 class="text-center mb-3">Clients</h2>
      <%= form_tag clients_path, method: :get do %>
        <div class="d-flex justify-content-between">
            <%= text_field_tag :query,
              params[:query],
              class: "form-control rounded-pill pl-4",
              placeholder: " 🕵️‍♀️ find your client",
              autofocus: true
            %>
            <%= submit_tag "Search", :style => "display: none;" %>
        </div>
      <% end %>
      <br>
      <div class="list-group">
        <% @clients.each do |client| %>
          <%= link_to client_path(client), class: "list-group-item list-group-item-action" do  %>
            <%= client.name %> (<%= client.user.email %>)
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
