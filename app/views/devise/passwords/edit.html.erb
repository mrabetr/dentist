<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-8 col-lg-6">
      <%= image_tag "appointment.png", class: "my-3 p-3 w-100" %>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="container bg-white rounded rounded-3 my-3 p-3">
          <h2 class="text-center mb-3">Update your password</h2>
          <div class="form-inputs">
            <%= f.input :password,
                        label: "Password",
                        required: true,
                        autofocus: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        label: "Confirm your password",
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update my password", class: "btn btn-primary w-100" %>
        </div>
      <% end %>

      <div class="my-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
